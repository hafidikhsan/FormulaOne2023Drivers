<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RealTimeMLKitActivity">

    <androidx.camera.view.PreviewView
        android:id="@+id/realtime_mlkit_preview_view"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/realtime_mlkit_barcode_title_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/realtime_mlkit_preview_view"
        android:text="@string/barcode_result"
        android:fontFamily="sans-serif-black"
        android:layout_marginTop="24dp"
        android:textSize="28sp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/realtime_mlkit_barcode_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/realtime_mlkit_barcode_title_result"
        android:text="@string/barcode_result"
        android:textAlignment="center"
        android:layout_marginTop="12dp"
        android:textSize="18sp"
        android:textColor="@color/black" />

</androidx.constraintlayout.widget.ConstraintLayout>